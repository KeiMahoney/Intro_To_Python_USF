int(pow(16, .5))


#Part VII
x = [1, 2, 3, 4, 5]
y = [11, 12, 13, 14, 15]
z = (21, 22, 23, 24, 25)

print(3*x)
print(x+y)
print(x-y)
print(x[1])
print(x[0])
print(x[-1])
print(x[:])
print(x[2:4])
print(x[:2])
print(x[::2])

x[3] = 8

print(x)

print(3*z)
print(z+y)
print(z-y)
print(z[1])
print(z[0])
print(z[-1])
print(z[:])
print(z[2:4])
print(z[:2])
print(z[::2])

z[3] = 8

print(z)
