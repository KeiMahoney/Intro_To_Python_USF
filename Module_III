#Part I
def greeting():
  print("Please enter your name: ")
  name = input()
  print("Hello there, " + name)
  print("Nice to meet you, " + name)
  print("Su'cuy gar, " = name)


#Part II
def greetingRollcall():
  print("Please enter name (1/3)")
  nameListInputOne = input()
  print("Please enter name (2/3)")
  nameListInputTwo = input()
  print("Please enter name (3/3)")
  nameListInputThree = input()
nameList = greetingRollcall()

for i in range(3):
  print("Hello there, " + nameList[i])
  print("Nice to meet you, " + nameList[i])
  print("Su'cuy gar, " = nameList[i])
  print("")


#Part III
def fullName():
  print("Please enter your first name")
  firstName = input()
  print("Please enter your surname")
  lastName = input()
  print("I hope you are having a good day, " + firstName + " " + lastName + "!")
for i in range(3):
  fullName()


#Part IV
def addCalculator(x,y):
  sum = x + y
  print("The sum is: " + str(sum))
addCalculator(3,5)
addCalculator(2,9)
addCalculator(999,1)


#Part V
def returnCalculator(x,y):
  sum = x + y
  return sum
numOne = returnCalculator(2,2)
numTwo = returnCalculator(3,4)
numThree = returnCalculator(7,5)

print("The sum is: " + str(numOne))
print("The sum is: " + str(numTwo))
print("The sum is: " + str(numThree))


